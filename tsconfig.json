{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "exclude": ["node_modules", "__mocks__"]
}
